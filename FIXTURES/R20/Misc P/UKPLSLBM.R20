;----------------------------------------------------------------------------
; Macros

MACRO "Reset Motor"   1  12
"data"                0  33
"delay"               1  3C
"data"                0   0
MEND

MACRO "Reset P/T"     2  12
"data"                0  66
"delay"               1  3C
"data"                0   0
MEND

MACRO "Reset All"     3  12
"data"                0  A4
"delay"               1  3C
"data"                0   0
MEND

MACRO "Lamp Off"      4  12
"data"                0  CB
"delay"               1  3C
"data"                0   0
MEND

MACRO "Lamp On"       5  12
"data"                0  E6
"delay"               1  3C
"data"                0   0
MEND

;----------------------------------------------------------------------------
; Range Tables

; Column by column description...
; 1. Low DMX value (inclusive)
; 2. High DMX value (inclusive)
; 3. Displayed text (max 11 chars)
; Variables used a=low val, b=high val, c=DMX val

RANGE 1  ;Pan
0   255  "%3d.%02d%%"(c-a)*100/(b-a),100*((c-a)*100%(b-a))/(b-a)
REND

RANGE 3  ;Tilt
0   255  "%3d.%02d%%"(c-a)*100/(b-a),100*((c-a)*100%(b-a))/(b-a)
REND

RANGE 5  ;Shutter
0   50   "Open"
51  240  "Strb %3d.%d%%"(c-a)*100/(b-a),10*((c-a)*100%(b-a))/(b-a)
REND

RANGE 6  ;Dimmer
0   255  "%3d.%d%%"(c-a)*100/(b-a),10*((c-a)*100%(b-a))/(b-a)
REND

RANGE 9  ;Prism
0   127  "Open"
128 255  "Prism"
REND

RANGE 10  ;Prism Rot
0   106  "Sp CW  %3d%%"(c-a)*100/(b-a)
107 180  "Sp CCW %3d%%"(c-a)*100/(b-a)
181 255  "Shake  %3d%%"(c-a)*100/(b-a)
REND

RANGE 11  ;Frost
0   255  "%3d.%d%%"(c-a)*100/(b-a),10*((c-a)*100%(b-a))/(b-a)
REND

RANGE 12  ;Control
0   25   "Safe"
26  76   "Reset Motor"
77  127  "Reset P/T"
128 200  "Reset All"
201 205  "Lamp Off"
206 255  "Lamp On"
REND

RANGE 13  ;Laser FX
0   10   "No Effect"
11  239  "Laser %3d%%"(c-a)*100/(b-a)
240 255  "Off"
REND

RANGE 14  ;Laser FX Spd
0   255  "%3d%%"100-((c-a)*100/(b-a))
REND

RANGE 15  ;Lens Rot 1
0   127  "CW  %3d.%d%%"(c-a)*100/(b-a),10*((c-a)*100%(b-a))/(b-a)
128 255  "CCW %3d.%d%%"(c-a)*100/(b-a),10*((c-a)*100%(b-a))/(b-a)
REND

RANGE 16  ;Lens Rot 2
0   127  "CW  %3d.%d%%"(c-a)*100/(b-a),10*((c-a)*100%(b-a))/(b-a)
128 255  "CCW %3d.%d%%"(c-a)*100/(b-a),10*((c-a)*100%(b-a))/(b-a)
REND

